<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity9">

    <TextView
        android:id="@+id/activity9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="ACTIVITE 9: Villes et Destinations"
        android:textAllCaps="true"
        android:textColor="#997E74"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView9"
        android:layout_width="623dp"
        android:layout_height="712dp"
        tools:layout_editor_absoluteY="93dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="44) Quelle ambiance de ville préfères-tu ?"
                android:textColor="#997E74"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="145dp"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="174dp"
                    android:layout_height="131dp"
                    android:layout_weight="1"
                    android:contentDescription="Ville animée et moderne (Johannesburg, Cotonou, Nairobi)"
                    android:tooltipText="Ville animée et moderne"
                    tools:srcCompat="@tools:sample/avatars" />

                <ImageButton
                    android:layout_width="138dp"
                    android:layout_height="127dp"
                    android:layout_weight="1"
                    android:contentDescription="Ville historique (Ouidah, Brazzaville, Gorée)"
                    tools:srcCompat="@tools:sample/backgrounds/scenic" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="122dp"
                    android:layout_weight="1"
                    android:contentDescription="Ville culturelle (Dakar, Abomey, Saint-Louis)"
                    tools:srcCompat="@tools:sample/avatars" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="125dp"
                    android:layout_weight="1"
                    android:contentDescription="Ville balnéaire (Pointe-Noire, Grand-Popo, Zanzibar)"
                    tools:srcCompat="@tools:sample/avatars" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="45) Quelle est la capitale de l'Afrique du Sud ?"
                android:textColor="#997E74"
                android:textSize="16sp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Le Cap"
                    android:textSize="16sp" />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Johannesburg"
                    android:textSize="16sp" />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pretoria"
                    android:textSize="16sp" />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Les trois"
                    android:textSize="16sp" />
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="46) Marrakech se trouve dans quel pays ?"
                android:textColor="#997E74"
                android:textSize="16sp" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="47) Quelle ville africaine veux-tu découvrir en priorité ? "
                android:textColor="#997E74"
                android:textSize="16sp" />

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:text="AutoCompleteTextView" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="48) Lagos (Nigeria) est connue pour... ?"
                android:textColor="#997E74"
                android:textSize="16sp" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Son industrie du cinéma (Nollywood)" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sa musique Afrobeat" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ses plages" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Son économie dynamique" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sa gastronomie" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="337dp"
        android:text="Précédent"
        app:layout_constraintEnd_toStartOf="@+id/button15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView9" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="40dp"
        android:text="Suivant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/activity9ButPrecedent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView9" />
</androidx.constraintlayout.widget.ConstraintLayout>