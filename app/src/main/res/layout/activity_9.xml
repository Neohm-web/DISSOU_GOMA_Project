<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity9">

    <TextView
        android:id="@+id/activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="ACTIVITE 9: Villes et Destinations"
        android:textAllCaps="true"
        android:textColor="#997E74"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView9"
        android:layout_width="411dp"
        android:layout_height="638dp"
        tools:layout_editor_absoluteY="93dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activity9Question44"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="44) Quelle ambiance de ville préfères-tu ?"
                android:textColor="#997E74"
                android:textSize="16sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/activity9Question44Answer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:itemCount="4" />

            <TextView
                android:id="@+id/activity9Question45"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="45) Quelle est la capitale de l'Afrique du Sud ?"
                android:textColor="#997E74"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/activity9Question45Answer"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/activity9Question45Answer1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Le Cap"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/activity9Question45Answer2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Johannesburg"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/activity9Question45Answer3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pretoria"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/activity9Question45Answer4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Les trois"
                    android:textSize="16sp" />
            </RadioGroup>

            <TextView
                android:id="@+id/activity9Question46"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="46) Marrakech se trouve dans quel pays ?"
                android:textColor="#997E74"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/activity9Question46Answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>