<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity6">

    <TextView
        android:id="@+id/activity6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="ACTIVITE 6: Voyage dans le Temps - Histoire Moderne"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#997E74"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView6"
        android:layout_width="wrap_content"
        android:layout_height="552dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="29) Nelson Mandela a passé combien d'années en prison ?"
                android:textColor="#997E74"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/radioGroupMandela"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5 ans"
                    android:textSize="16sp" />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="15 ans"
                    android:textSize="16sp" />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="27 ans"
                    android:textSize="16sp" />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="35 ans"
                    android:textSize="16sp" />
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="30) Quel pays africain n'a jamais été colonisé ?"
                android:textColor="#997E74"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/spinnerPays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:labelFor="@id/scrollView6"
                android:text="31) En quelle année la plupart des pays africains ont-ils obtenu leur indépendance ?"
                android:textColor="#997E74"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textViewSeekValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Décennie : 1960"
                android:textColor="#997E74"
                android:textSize="16sp"
                android:paddingTop="8dp" />

            <SeekBar
                android:id="@+id/seekBarIndep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="5"
                android:min="0"
                android:progress="0"
                tools:ignore="DuplicateIds" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="32) Qui était Kwame Nkrumah ?"
                android:textColor="#997E74"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/checkBoxGhana"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Premier président du Ghana"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/checkBoxZoulou"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Roi zoulou"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/checkBoxEcrivain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Écrivain nigérian"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/checkBoxMusicien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Musicien malien"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/checkBoxAuteur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Auteur du livre :The Spectre of Black Power"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:labelFor="@id/autoCompleteFemme"
                android:text="33) Quelle femme africaine a reçu le Prix Nobel de la Paix ?"
                android:textColor="#997E74"
                android:textSize="16sp" />

            <AutoCompleteTextView
                android:id="@+id/autoCompleteFemme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp" />


        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:text="Précédent"
        app:layout_constraintStart_toStartOf="@+id/scrollView6"
        app:layout_constraintTop_toBottomOf="@+id/scrollView6" />

    <Button
        android:id="@+id/button20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suivant"
        app:layout_constraintBottom_toBottomOf="@+id/button14"
        app:layout_constraintEnd_toEndOf="@+id/scrollView6"
        app:layout_constraintTop_toTopOf="@+id/button14"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>